<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor">

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:id="@+id/diagnose_text_neomorph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        app:neomorph_background_color="@color/backgroundColor"
        app:neomorph_corner_radius="16dp"
        app:neomorph_elevation="4dp"
        app:neomorph_highlight_color="#FFFFFF"
        app:neomorph_layer_type="software"
        app:neomorph_shadow_color="#8A8A8A"
        app:neomorph_shadow_type="inner"
        app:neomorph_view_type="rectangular">

        <TextView
            android:id="@+id/diagnose_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00E87465"
            android:gravity="center"
            android:paddingHorizontal="16dp"
            android:paddingVertical="3dp"
            android:text="История болезни"
            android:textColor="@color/colorAccent"
            android:textSize="31sp"
            android:textStyle="bold" />
    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:id="@+id/diagnose_add_neomorph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/diagnose_text_neomorph"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginHorizontal="20dp"
        app:neomorph_background_color="@color/backgroundColor"
        app:neomorph_corner_radius="16dp"
        app:neomorph_elevation="2dp"
        app:neomorph_highlight_color="#FFFFFF"
        app:neomorph_layer_type="software"
        app:neomorph_shadow_color="#8A8A8A"
        app:neomorph_shadow_type="outer"
        app:neomorph_view_type="rectangular">

        <Button
            android:id="@+id/diagnose_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#00E87465"
            android:backgroundTint="#00E87465"
            android:text="Добавить болезнь"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="20sp" />
    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

    <ListView
        android:id="@+id/diagnose_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/diagnose_add_neomorph"
        android:padding="5dp"/>
</RelativeLayout>