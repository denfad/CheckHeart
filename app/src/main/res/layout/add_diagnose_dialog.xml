<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor"
    android:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="10dp"
                app:neomorph_background_color="@color/backgroundColor"
                app:neomorph_corner_radius="10dp"
                app:neomorph_elevation="4dp"
                app:neomorph_highlight_color="#FFFFFF"
                app:neomorph_layer_type="software"
                app:neomorph_shadow_color="#8A8A8A"
                app:neomorph_shadow_type="inner"
                app:neomorph_view_type="rectangular">
                <EditText
                    android:id="@+id/diagnose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Название болезни"
                    android:background="#00E87465"
                    android:gravity="center_vertical"
                    android:padding="20dp"
                    android:textColor="@color/material_on_primary_disabled"
                    android:textColorHint="@color/colorAccent"/>
            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Дата когда вам ее деагностировали?"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"
                android:gravity="center"
                android:padding="5dp"/>

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:id="@+id/diagnose_add_dialog_neomorph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                app:neomorph_background_color="@color/backgroundColor"
                app:neomorph_corner_radius="16dp"
                app:neomorph_elevation="2dp"
                app:neomorph_highlight_color="#FFFFFF"
                app:neomorph_layer_type="software"
                app:neomorph_shadow_color="#8A8A8A"
                app:neomorph_shadow_type="outer"
                app:neomorph_view_type="rectangular">

                <Button
                    android:id="@+id/diagnose_add_dialog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="#00E87465"
                    android:backgroundTint="#00E87465"
                    android:text="Добавить болезнь"
                    android:textAlignment="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="20sp" />
            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

        </LinearLayout>
</RelativeLayout>