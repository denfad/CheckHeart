<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor">

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:id="@+id/heart_neomorph"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/pulse_text_neomorph"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="30dp"
        app:neomorph_background_color="@color/backgroundColor"
        app:neomorph_elevation="4dp"
        app:neomorph_highlight_color="#FFFFFF"
        app:neomorph_layer_type="software"
        app:neomorph_shadow_color="#8A8A8A"
        app:neomorph_shadow_type="outer"
        app:neomorph_view_type="circular">

        <ImageView
            android:id="@+id/image_heart"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_heart_24dp"/>
    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:id="@+id/pulse_text_neomorph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:neomorph_background_color="@color/backgroundColor"
        app:neomorph_corner_radius="16dp"
        app:neomorph_elevation="4dp"
        app:neomorph_highlight_color="#FFFFFF"
        app:neomorph_layer_type="software"
        app:neomorph_shadow_color="#8A8A8A"
        app:neomorph_shadow_type="inner"
        app:neomorph_view_type="rectangular">

        <TextView
            android:id="@+id/pulse_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00E87465"
            android:gravity="center"
            android:text="Ваш пульс"
            android:textSize="31sp"
            android:textStyle="bold"
            android:paddingVertical="2dp"
            android:paddingHorizontal="16dp"
            android:textColor="@color/colorAccent" />
    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:id="@+id/pulse_neomorph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_above="@+id/password_neomorph"
        app:neomorph_background_color="@color/backgroundColor"
        app:neomorph_corner_radius="40dp"
        app:neomorph_elevation="4dp"
        android:layout_below="@+id/pulse_text_neomorph"
        app:neomorph_highlight_color="#FFFFFF"
        app:neomorph_layer_type="software"
        app:neomorph_shadow_color="#8A8A8A"
        app:neomorph_shadow_type="outer"
        app:neomorph_view_type="rectangular">

        <TextView
            android:id="@+id/pulse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00E87465"
            android:gravity="center"
            android:text="91 BPM"
            android:textSize="65sp"
            android:textStyle="bold"
            android:paddingVertical="2dp"
            android:paddingHorizontal="16dp"
            android:textColor="@color/colorAccent" />
    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
</RelativeLayout>