<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/profile_text_neomorph"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            app:neomorph_background_color="@color/backgroundColor"
            app:neomorph_corner_radius="16dp"
            app:neomorph_elevation="2dp"
            app:neomorph_highlight_color="#FFFFFF"
            app:neomorph_layer_type="software"
            app:neomorph_shadow_color="#8A8A8A"
            app:neomorph_shadow_type="inner"
            app:neomorph_view_type="rectangular">

            <TextView
                android:id="@+id/profile_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00E87465"
                android:gravity="center"
                android:paddingHorizontal="16dp"
                android:paddingVertical="3dp"
                android:text="Профиль"
                android:textColor="@color/colorAccent"
                android:textSize="31sp"
                android:textStyle="bold" />
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>


        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/profile_age_neomorph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_text_neomorph"
            android:layout_alignParentStart="true"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="0dp"
            app:neomorph_background_color="@color/backgroundColor"
            app:neomorph_corner_radius="20dp"
            app:neomorph_elevation="4dp"
            app:neomorph_highlight_color="#FFFFFF"
            app:neomorph_layer_type="software"
            app:neomorph_shadow_color="#8A8A8A"
            app:neomorph_shadow_type="outer"
            app:neomorph_view_type="rectangular">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingRight="20dp"
                android:paddingLeft="50dp"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Мой возраст:"
                        android:paddingHorizontal="2dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="20sp"
                        android:gravity="right"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_edit_24dp"
                        android:background="#00D4D5E1"
                        android:padding="7dp"/>
                    <TextView
                        android:id="@+id/profile_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:paddingHorizontal="2dp"
                        android:paddingVertical="2dp"
                        android:text="34"
                        android:textColor="@color/colorAccent"
                        android:textSize="31sp"
                        android:textStyle="bold" />
                </TableRow>
            </LinearLayout>

        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/profile_sex_neomorph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_age_neomorph"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="0dp"
            app:neomorph_background_color="@color/backgroundColor"
            app:neomorph_corner_radius="20dp"
            app:neomorph_elevation="4dp"
            app:neomorph_highlight_color="#FFFFFF"
            app:neomorph_layer_type="software"
            app:neomorph_shadow_color="#8A8A8A"
            app:neomorph_shadow_type="outer"
            app:neomorph_view_type="rectangular">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingRight="50dp"
                android:paddingLeft="20dp"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Мой пол:"
                        android:paddingHorizontal="2dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="20sp"
                        android:gravity="left"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_edit_24dp"
                        android:background="#00D4D5E1"
                        android:padding="7dp"/>

                    <TextView
                        android:id="@+id/profile_sex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00E87465"
                        android:gravity="left"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp"
                        android:text="Андрей"
                        android:textColor="@color/colorAccent"
                        android:textSize="31sp"
                        android:textStyle="bold" />

                </TableRow>
            </LinearLayout>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/profile_height_neomorph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_sex_neomorph"
            android:layout_alignParentStart="true"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="0dp"
            app:neomorph_background_color="@color/backgroundColor"
            app:neomorph_corner_radius="20dp"
            app:neomorph_elevation="4dp"
            app:neomorph_highlight_color="#FFFFFF"
            app:neomorph_layer_type="software"
            app:neomorph_shadow_color="#8A8A8A"
            app:neomorph_shadow_type="outer"
            app:neomorph_view_type="rectangular">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingRight="20dp"
                android:paddingLeft="50dp"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Мой рост:"
                        android:paddingHorizontal="2dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="20sp"
                        android:gravity="right"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_edit_24dp"
                        android:background="#00D4D5E1"
                        android:padding="7dp"/>
                    <TextView
                        android:id="@+id/profile_height"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00E87465"
                        android:gravity="right"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp"
                        android:text="180 см"
                        android:textColor="@color/colorAccent"
                        android:textSize="31sp"
                        android:textStyle="bold" />
                </TableRow>
            </LinearLayout>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/profile_weight_neomorph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_height_neomorph"
            android:layout_alignParentEnd="true"
            android:layout_marginVertical="10dp"
            android:layout_marginEnd="0dp"
            app:neomorph_background_color="@color/backgroundColor"
            app:neomorph_corner_radius="20dp"
            app:neomorph_elevation="4dp"
            app:neomorph_highlight_color="#FFFFFF"
            app:neomorph_layer_type="software"
            app:neomorph_shadow_color="#8A8A8A"
            app:neomorph_shadow_type="outer"
            app:neomorph_view_type="rectangular">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="5dp"
                android:paddingRight="50dp"
                android:paddingLeft="20dp"
                android:orientation="vertical">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Мой вес:"
                        android:paddingHorizontal="2dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="20sp"
                        android:gravity="left"/>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_edit_24dp"
                        android:background="#00D4D5E1"
                        android:padding="7dp"/>
                    <TextView
                        android:id="@+id/profile_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00E87465"
                        android:gravity="left"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp"
                        android:text="70 кг"
                        android:textColor="@color/colorAccent"
                        android:textSize="31sp"
                        android:textStyle="bold" />
                </TableRow>
            </LinearLayout>
        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

        <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
            android:id="@+id/profile_save_data_neomorph"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_weight_neomorph"
            android:layout_alignParentStart="true"
            android:layout_marginVertical="10dp"
            android:layout_marginStart="0dp"
            app:neomorph_background_color="@color/backgroundColor"
            app:neomorph_corner_radius="20dp"
            app:neomorph_elevation="4dp"
            app:neomorph_highlight_color="#FFFFFF"
            app:neomorph_layer_type="software"
            app:neomorph_shadow_color="#8A8A8A"
            app:neomorph_shadow_type="outer"
            app:neomorph_view_type="rectangular">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00E87465"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp"
                        android:text="Сохранить данные ЭКГ"
                        android:textColor="@color/colorAccent"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:layout_weight="1"/>

                    <Switch
                        android:id="@+id/profile_save_data_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="10dp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingVertical="5dp"
                    android:paddingHorizontal="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#00E87465"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp"
                        android:text="Сохранить данные ФПГ"
                        android:textColor="@color/colorAccent"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:layout_weight="1"/>

                    <Switch
                        android:id="@+id/profile_save_data_ppg_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_marginHorizontal="10dp"/>
                </LinearLayout>
            </LinearLayout>

        </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>


    </RelativeLayout>
</ScrollView>