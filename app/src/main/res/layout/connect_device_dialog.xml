<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_gravity="center"
        app:neomorph_background_color="@color/backgroundColor"
        app:neomorph_corner_radius="10dp"
        app:neomorph_elevation="2dp"
        app:neomorph_highlight_color="#FFFFFF"
        app:neomorph_layer_type="software"
        app:neomorph_shadow_color="#8A8A8A"
        app:neomorph_shadow_type="outer"
        app:neomorph_view_type="rectangular">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Выберите браслет"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:gravity="center"
            android:padding="10dp"/>

    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/paired_devices"
        android:padding="10dp"
        android:divider="@color/colorAccent"
        android:textAlignment="center"/>
</LinearLayout>