<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
        android:id="@+id/diagnose_item_neomorph"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="20dp"
        app:neomorph_background_color="@color/backgroundColor"
        app:neomorph_corner_radius="20dp"
        app:neomorph_elevation="2dp"
        app:neomorph_highlight_color="#FFFFFF"
        app:neomorph_layer_type="software"
        app:neomorph_shadow_color="#8A8A8A"
        app:neomorph_shadow_type="outer"
        app:neomorph_view_type="rectangular">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="5dp"
            android:paddingRight="50dp"
            android:paddingLeft="20dp"
            android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:id="@+id/diagnose_date"
                    android:layout_height="wrap_content"
                    android:text="24.07.2008"
                    android:paddingHorizontal="2dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp"
                    android:gravity="left"/>
                <TextView
                    android:id="@+id/diagnose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00E87465"
                    android:gravity="left"
                    android:paddingVertical="2dp"
                    android:text="Микроинфаркт"
                    android:textColor="@color/colorAccent"
                    android:textSize="31dp"
                    android:textStyle="bold" />
        </LinearLayout>
    </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
</RelativeLayout>