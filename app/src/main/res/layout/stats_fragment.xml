<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/backgroundColor">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp"
            android:orientation="vertical">

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                app:neomorph_background_color="@color/backgroundColor"
                app:neomorph_corner_radius="16dp"
                app:neomorph_elevation="2dp"
                app:neomorph_highlight_color="#FFFFFF"
                app:neomorph_layer_type="software"
                app:neomorph_shadow_color="#8A8A8A"
                app:neomorph_shadow_type="inner"
                app:neomorph_view_type="rectangular">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00E87465"
                    android:gravity="center"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="3dp"
                    android:text="Статистика"
                    android:textColor="@color/colorAccent"
                    android:textSize="31sp"
                    android:textStyle="bold" />
            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:neomorph_background_color="@color/backgroundColor"
                app:neomorph_corner_radius="16dp"
                app:neomorph_elevation="2dp"
                app:neomorph_highlight_color="#FFFFFF"
                app:neomorph_layer_type="software"
                app:neomorph_shadow_color="#8A8A8A"
                app:neomorph_shadow_type="inner"
                app:neomorph_view_type="rectangular">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00E87465"
                    android:gravity="center"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="3dp"
                    android:text="ФПГ"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                app:neomorph_background_color="@color/backgroundColor"
                app:neomorph_corner_radius="16dp"
                app:neomorph_elevation="4dp"
                app:neomorph_highlight_color="#FFFFFF"
                app:neomorph_layer_type="software"
                app:neomorph_shadow_color="#777777"
                app:neomorph_shadow_type="inner"
                app:neomorph_view_type="rectangular">
                <com.jjoe64.graphview.GraphView
                    android:id="@+id/ppg_graph"
                    android:layout_width="match_parent"
                    android:layout_height="231dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="5dp"/>
            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:neomorph_background_color="@color/backgroundColor"
                app:neomorph_corner_radius="16dp"
                app:neomorph_elevation="2dp"
                app:neomorph_highlight_color="#FFFFFF"
                app:neomorph_layer_type="software"
                app:neomorph_shadow_color="#8A8A8A"
                app:neomorph_shadow_type="inner"
                app:neomorph_view_type="rectangular">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#00E87465"
                    android:gravity="center"
                    android:paddingHorizontal="30dp"
                    android:paddingVertical="3dp"
                    android:text="ЭКГ"
                    android:textColor="@color/colorAccent"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>

            <com.chinodev.androidneomorphframelayout.NeomorphFrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                app:neomorph_background_color="@color/backgroundColor"
                app:neomorph_corner_radius="16dp"
                app:neomorph_elevation="2dp"
                app:neomorph_highlight_color="#FFFFFF"
                app:neomorph_layer_type="software"
                app:neomorph_shadow_color="#777777"
                app:neomorph_shadow_type="inner"
                app:neomorph_view_type="rectangular">
                <com.jjoe64.graphview.GraphView
                    android:id="@+id/ecg_graph"
                    android:layout_width="match_parent"
                    android:layout_height="231dp"
                    android:layout_marginVertical="10dp"
                    android:layout_marginHorizontal="5dp"/>
            </com.chinodev.androidneomorphframelayout.NeomorphFrameLayout>
        </LinearLayout>

    </ScrollView>

</RelativeLayout>